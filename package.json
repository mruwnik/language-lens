{
  "name": "language-lens",
  "version": "1.0.0",
  "description": "Browser extension for learning languages through contextual learning and spaced repetition",
  "engines": {
    "node": ">=18.13.0"
  },
  "scripts": {
    "test": "jest",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.{js,html,css}",
    "build:package": "node scripts/build.js"
